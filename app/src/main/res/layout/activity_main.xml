<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/edit_text_last_name"
        android:hint="@string/edit_text_last_name"
        android:inputType="text"
        android:padding="24dp" />

    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/edit_text_first_name"
        android:hint="@string/edit_text_first_name"
        android:inputType="text"
        android:padding="24dp" />

    <EditText
        android:id="@+id/edit_text_middle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/edit_text_middle_name"
        android:hint="@string/edit_text_middle_name"
        android:inputType="text"
        android:padding="24dp" />

    <EditText
        android:id="@+id/edit_text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/edit_text_age"
        android:hint="@string/edit_text_age"
        android:inputType="text"
        android:padding="24dp" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/button_main_activity1" />

</LinearLayout>